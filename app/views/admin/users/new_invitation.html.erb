<h2>Send invitation</h2>

<%= form_for @user, :url => send_invitation_admin_users_path do |f| %>
    
   <table style='width: 50%'>
   	<tr>
   		<td><%= f.label :email %></td>
   		<td><%= f.text_field :email, :required => true %></td>

      <td><%= f.label :login %></td>
      <td><%= f.text_field :login, :required => true %></td>
   	</tr>
   </table>
   
  <%= f.submit  "Send an Invitation" %>
<% end %>